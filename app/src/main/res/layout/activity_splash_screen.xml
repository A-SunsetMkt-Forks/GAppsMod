<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            app:fontFamily="sans-serif-condensed-medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/done_root"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/circular_root"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/splash_screen_root"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/done_root_service"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/circular_root_service"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/splash_screen_root_service"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/done_dialer"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/circular_dialer"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/splash_screen_dialer"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/done_phenotype"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/circular_phenotype"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/splash_screen_phenotype"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/done_updates"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/circular_updates"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/splash_screen_updates"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:fontFamily="sans-serif" />
    </LinearLayout>
</LinearLayout>